// Test static { } blocks for compile-time evaluation

const colors = ["#ff5733", "#33ff57", "#3357ff", "#ff33f5"]
const items = ["Home", "Profile", "Settings", "About"]
const DEBUG = true

App {
  Column {
    width = 800
    height = 600
    background = "#1a1a1a"
    padding = 20
    gap = 15

    Text {
      text = "Static Block Demo"
      fontSize = 24
      color = "#ffffff"
    }

    // Compile-time for loop - expanded at transpilation
    static {
      for color in colors {
        Container {
          width = 100%
          height = 40
          background = color
          borderRadius = 8
        }
      }
    }

    Text {
      text = "Menu Items:"
      fontSize = 18
      color = "#cccccc"
    }

    // Another static for loop
    static {
      for item in items {
        Row {
          width = 100%
          height = 50
          background = "#2d2d2d"
          padding = 10
          borderRadius = 4

          Text {
            text = item
            fontSize = 16
            color = "#ffffff"
          }
        }
      }
    }

    // Static conditional - evaluated at compile time
    static {
      if DEBUG {
        Container {
          width = 100%
          height = 30
          background = "#ffcc00"
          padding = 5

          Text {
            text = "Debug Mode Active"
            fontSize = 14
            color = "#000000"
          }
        }
      }
    }
  }
}
