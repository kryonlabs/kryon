# Minimal demo - button and label
# This is the default demo that loads when you run kryon-wm without arguments
# Uses absolute positioning to match the original hardcoded demo

window demo "Demo Window" 800 600 {
    absolute {
        button btn_click "Click Me" { rect "50 50 200 50" }
        label lbl_hello "Hello, World!" { rect "50 120 300 40" }
    }
}
