// Link Element Test
// This file tests the basic Link element functionality

@style "link_style" {
    backgroundColor: "#404080FF"
    borderColor: "#00AAFFFF"
    borderWidth: 1
    padding: 10
    margin: 5
    textColor: "#FFFFFFFF"
    fontSize: 16
    borderRadius: 5
}

@style "external_link" {
    backgroundColor: "#804040FF"
    borderColor: "#FF9900FF"
    borderWidth: 1
    padding: 10
    margin: 5
    textColor: "#FFFFFFFF"
    fontSize: 16
    borderRadius: 5
}

App {
    windowTitle: "Link Element Test"
    windowWidth: 600
    windowHeight: 400
    backgroundColor: "#191919FF"
    
    Column {
        gap: 20
        padding: 20
        
        Text {
            text: "üîó Link Element Test"
            fontSize: 24
            textColor: "#FF9900FF"
