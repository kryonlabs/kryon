// Simple Markdown Test
// Basic test to verify the Markdown component works correctly

App {
    width = 800
    height = 600
    title = "Simple Markdown Test"
    background = "#ffffff"

    Container {
        width = 800
        height = 600
        padding = 20

        Column {
            gap = 20
            width = 100%
            height = 100%

            // Title
            Text {
                text = "Markdown Component Test"
                color = "#333333"
                fontSize = 24
            }

            // Markdown content with default theme
            Markdown {
                source = "# Scrollable Markdown Test\n\nThis is a **bold** text with *italic* and `code` formatting.\n\n## Section 1: Lists\n\n### Unordered List\n- First item\n- Second item\n- Third item\n\n### Ordered List\n1. First step\n2. Second step\n3. Third step\n\n## Section 2: Blockquote\n\n> This is a blockquote.\n> It can span multiple lines."
                width = 760
                height = 500
            }
        }
    }
}
