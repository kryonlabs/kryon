            margin: 20
        }
        
        Text {
            text: "Internal Navigation Links:"
            fontSize: 18
            textColor: "#00AAFFFF"
            margin: 10
        }
        
        Link {
            to: "hello-world.kry"
            text: "üè† Hello World Example"
            class: "link_style"
        }
        
        Link {
            to: "button.kry"
            text: "üîò Button Example"
            class: "link_style"
        }
        
        Link {
            to: "text_input.kry"
