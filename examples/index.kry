    borderWidth: 1
    borderRadius: 8
    padding: 20
    margin: 8
    width: 350
    minHeight: 120
    
    // Custom properties
    file: $file
    title: $title
    description: $description
    category: $category
    
    @function "lua" handleCardClick() {
        print("ðŸ“‚ Opening example: " .. self.title)
        -- This will be handled by Link element when implemented
    end
    
    // Card layout
    Column {
        gap: 8
        
        Row {
            mainAxisAlignment: "space-between"
            
            Text {
                text: $title
