// Static For Loop Test - Compile-time loop expansion
// This demonstrates how static blocks are expanded at compile time

// Define a typed constant array
const colors: array<string> = ["#E74C3C", "#3498DB", "#2ECC71", "#F39C12", "#9B59B6"]

// Define constant labels
const labels: array<string> = ["Red", "Blue", "Green", "Orange", "Purple"]

App {
  windowWidth = 800
  windowHeight = 600
  backgroundColor = "#1E1E1E"

  Column {
    width = 100%
    height = 100%
    justifyContent = "center"
    alignItems = "center"
    gap = 20

    Text {
      text = "Static For Loop Demo"
      fontSize = 28
      color = "#FFFFFF"
    }

    Text {
      text = "Colors generated at compile time:"
      fontSize = 16
      color = "#AAAAAA"
    }

    // Static for loop - expands at compile time to 5 containers
    Row {
      gap = 10
      alignItems = "center"

      static {
        for color in colors {
          Container {
            width = 60
            height = 60
            background = color
            borderRadius = 8
          }
        }
      }
    }

    // Another static for using inline array
    Text {
      text = "Sizes generated from inline array:"
      fontSize = 16
      color = "#AAAAAA"
    }

    Row {
      gap = 10
      alignItems = "flex-end"

      static {
        for size in [30, 50, 70, 90, 110] {
          Container {
            width = size
            height = size
            background = "#4A90E2"
            borderRadius = 4
          }
        }
      }
    }
  }
}
