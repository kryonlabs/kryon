# Counter Example
# Demonstrates state and event handling

window "Counter" 300 200 {
    column gap=10 padding=20 {
        # Display current count
        label lbl_count "Count: 0" align="center"

        # Buttons to increment/decrement
        row gap=10 {
            button btn_dec "-"
            button btn_inc "+"
        }
    }
}
