// This test shows what an open dropdown menu should look like
// The dropdown menu rendering should happen in the second pass

App {
  title = "Dropdown Menu Test"
  width = 600
  height = 500
  backgroundColor = "#191919"

  Column {
    gap = 20
    padding = 40

    Text {
      text = "Click the dropdown to open the menu"
      fontSize = 18
      color = "white"
    }

    Dropdown {
      placeholder = "Choose a color..."
      options = ["Red", "Green", "Blue", "Yellow", "Purple", "Orange", "Pink", "Cyan"]
      selectedIndex = 0
      width = 250
      height = 45
      backgroundColor = "#2a2a2a"
      borderColor = "#555555"
      borderWidth = 1
      borderRadius = 4
      color = "white"
      fontSize = 14
    }

    Text {
      text = "Second dropdown:"
      fontSize = 14
      color = "#999999"
    }

    Dropdown {
      placeholder = "Select your country..."
      options = ["United States", "Canada", "United Kingdom", "Australia", "Germany"]
      selectedIndex = -1
      width = 250
      height = 45
      backgroundColor = "#2a2a2a"
      borderColor = "#555555"
      borderWidth = 1
      borderRadius = 4
      color = "white"
      fontSize = 14
    }
  }
}
