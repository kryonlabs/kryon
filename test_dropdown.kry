App {
  title = "Dropdown Test"
  width = 600
  height = 400
  backgroundColor = "#191919"

  Column {
    gap = 20
    padding = 40

    Text {
      text = "Dropdown Component Test"
      fontSize = 24
      color = "white"
    }

    Dropdown {
      placeholder = "Choose a color..."
      options = ["Red", "Green", "Blue", "Yellow", "Purple"]
      selectedIndex = 0
      width = 200
      height = 40
      backgroundColor = "#2a2a2a"
      borderColor = "#555555"
      borderWidth = 1
      borderRadius = 4
      color = "white"
    }

    Dropdown {
      placeholder = "Choose a country..."
      options = ["United States", "Canada", "Mexico", "Brazil"]
      selectedIndex = -1
      width = 200
      height = 40
      backgroundColor = "#2a2a2a"
      borderColor = "#555555"
      borderWidth = 1
      borderRadius = 4
      color = "white"
    }
  }
}
